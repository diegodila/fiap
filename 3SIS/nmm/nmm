10000000 = 128 - 2 redes
11000000 = 192 - 4 redes
11100000 = 224 - 8 redes
11110000 = 240 - 16 redes 
11111000 = 248 - 32 redes 
11111100 = 252 - 64 redes 
11111110 = 254 - 128 redes 
11111111 = 255 - 

